<form class="{{cssClass}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="header-fields">

      {{!-- Aspect Name --}}
      <div class="field-group aspect-name-field">
        <label>{{localize "SCIONS.SimpleAspect.AspectName"}}</label>
        <input type="text" name="name" value="{{actor.name}}" placeholder="{{localize "SCIONS.SimpleAspect.AspectNamePlaceholder"}}"/>
      </div>

      {{!-- Actor Image/Icon --}}
      <div class="field-group aspect-icon-field">
        <label>{{localize "SCIONS.SimpleAspect.Icon"}}</label>
        <div class="profile-img">
          <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
        </div>
      </div>

    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body simple-aspect-body">

    {{!-- Free Invokes Section --}}
    <div class="free-invokes-section">
      <div class="section-header">{{localize "SCIONS.SimpleAspect.FreeInvokes"}}</div>

      <div class="invoke-controls">
        <button type="button" class="invoke-decrement" title="{{localize "SCIONS.SimpleAspect.DecreaseFreeInvokes"}}">
          <i class="fas fa-minus"></i>
        </button>

        <div class="invoke-display">
          <input type="number" name="system.freeInvokes.value" value="{{system.freeInvokes.value}}" min="0" max="{{system.freeInvokes.max}}" />
          <span class="invoke-separator">/</span>
          <input type="number" name="system.freeInvokes.max" value="{{system.freeInvokes.max}}" min="0" />
        </div>

        <button type="button" class="invoke-increment" title="{{localize "SCIONS.SimpleAspect.IncreaseFreeInvokes"}}">
          <i class="fas fa-plus"></i>
        </button>
      </div>
    </div>

  </section>

</form>
